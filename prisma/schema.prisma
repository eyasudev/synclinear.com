datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model SyncedIssue {
    id String @id @default(cuid())

    githubIssueNumber Int
    linearIssueNumber Int

    githubIssueId Int
    linearIssueId String

    linearTeamId String

    @@map("synced_issues")
}

model LinearLabel {
    id String @id @default(cuid())

    publicLabelId String

    canceledStateId   String
    doneStateId       String
    toDoStateId       String
    inProgressStateId String

    @@map("linear_labels")
}
