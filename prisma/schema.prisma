datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model SyncedIssue {
    id String @id @default(cuid())

    githubIssueNumber Int
    linearIssueNumber Int

    githubIssueId Int
    linearIssueId String

    linearTeamId String

    @@map("synced_issues")
}

model LinearTeam {
    id String @id @default(cuid())

    teamId   String
    teamName String

    userId   String
    userName String

    publicLabelId String

    canceledStateId   String
    doneStateId       String
    toDoStateId       String
    inProgressStateId String

    @@map("linear_teams")
}

model GitHubRepo {
    id String @id @default(cuid())

    repoId Int
    name   String

    apiKey           String
    apiKeyInitVector String

    webhookSecret String

    @@map("github_repos")
}
